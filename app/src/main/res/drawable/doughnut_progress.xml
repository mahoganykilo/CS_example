<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/progress">
        <rotate
            android:fromDegrees="270"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="270">

            <shape
                android:innerRadiusRatio="3.6"
                android:shape="ring"
                android:thicknessRatio="60.0"
                android:useLevel="true">

                <gradient
                    android:centerColor="@color/yellow_500"
                    android:endColor="@color/green_500"
                    android:startColor="@color/orange_500"
                    android:type="sweep" />

            </shape>
        </rotate>
    </item>
</layer-list>
