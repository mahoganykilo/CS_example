<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/progress">
        <rotate
            android:fromDegrees="270"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="270">

            <shape
                android:innerRadiusRatio="3.8"
                android:shape="ring"
                android:thicknessRatio="40.0"
                android:useLevel="true">

                <gradient
                    android:centerColor="@color/teal_A100"
                    android:endColor="@color/teal_A100"
                    android:startColor="@color/teal_A100"
                    android:type="sweep" />

            </shape>
        </rotate>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <rotate
            android:fromDegrees="270"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="270">

            <shape
                android:innerRadiusRatio="4.2"
                android:shape="ring"
                android:thicknessRatio="40.0"
                android:useLevel="true">

                <gradient
                    android:centerColor="@color/purple_200"
                    android:endColor="@color/purple_200"
                    android:startColor="@color/purple_200"
                    android:type="sweep" />

            </shape>
        </rotate>
    </item>
</layer-list>
